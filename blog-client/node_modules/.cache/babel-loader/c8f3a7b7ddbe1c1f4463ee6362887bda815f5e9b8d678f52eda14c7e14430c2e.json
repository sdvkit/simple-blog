{"ast":null,"code":"import Card from 'primevue/card';\nimport Avatar from 'primevue/avatar';\nimport Button from \"primevue/button\";\nimport InputText from 'primevue/inputtext';\nimport Textarea from 'primevue/textarea';\nimport Post from \"@/components/Post.vue\";\nexport default {\n  name: \"profile-view\",\n  data() {\n    return {\n      posts: this.$store.state.posts,\n      editStatus: false,\n      email: 'monkey-john@gmail.com',\n      postsCount: 32,\n      about: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. A aut eaque, est modi natus nesciunt sapiente sed similique soluta suscipit? Accusamus ea eaque eligendi eum expedita minus nihil recusandae temporibus!'\n    };\n  },\n  methods: {\n    saveChanges() {\n      this.editStatus = false;\n      this.$toast.add({\n        severity: 'success',\n        summary: 'Successfully updated',\n        detail: 'Your profile has been updated',\n        life: 6000\n      });\n    }\n  },\n  components: {\n    Card,\n    Avatar,\n    Button,\n    InputText,\n    Textarea,\n    Post\n  }\n};","map":{"version":3,"mappings":"AA8DA,OAAOA,IAAG,MAAO,eAAc;AAC/B,OAAOC,MAAK,MAAO,iBAAgB;AACnC,OAAOC,MAAK,MAAO,iBAAgB;AACnC,OAAOC,SAAQ,MAAO,oBAAmB;AACzC,OAAOC,QAAO,MAAO,mBAAkB;AACvC,OAAOC,IAAG,MAAO,uBAAsB;AAEvC,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,IAAI,GAAG;IACL,OAAO;MACLC,KAAK,EAAE,IAAI,CAACC,MAAM,CAACC,KAAK,CAACF,KAAK;MAC9BG,UAAU,EAAE,KAAK;MACjBC,KAAK,EAAE,uBAAuB;MAC9BC,UAAU,EAAE,EAAE;MACdC,KAAK,EAAE;IACT;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,WAAW,GAAG;MACZ,IAAI,CAACL,UAAS,GAAI,KAAI;MACtB,IAAI,CAACM,MAAM,CAACC,GAAG,CAAC;QAACC,QAAQ,EAAC,SAAS;QAAEC,OAAO,EAAE,sBAAsB;QAAEC,MAAM,EAAC,+BAA+B;QAAEC,IAAI,EAAE;MAAI,CAAC;IAC3H;EACF,CAAC;EACDC,UAAU,EAAE;IACVvB,IAAI;IACJC,MAAM;IACNC,MAAM;IACNC,SAAS;IACTC,QAAQ;IACRC;EACF;AACF","names":["Card","Avatar","Button","InputText","Textarea","Post","name","data","posts","$store","state","editStatus","email","postsCount","about","methods","saveChanges","$toast","add","severity","summary","detail","life","components"],"sourceRoot":"","sources":["/Users/nikitasudaev/WebstormProjects/blog-client/src/views/Profile.vue"],"sourcesContent":["<template>\n  <div class=\"wrapper\">\n\n    <Card class=\"profile-card\">\n      <template #content>\n        <h3>Email</h3>\n        <span v-if=\"!editStatus\">\n          {{ email }}\n        </span>\n        <span v-else>\n          <InputText type=\"text\" v-model=\"email\" :style=\"{\n            width: '100%'\n          }\"/>\n        </span>\n\n        <h3>Posts</h3>\n        {{ postsCount }}\n\n        <h3>About me</h3>\n        <span v-if=\"!editStatus\">\n          {{ about }}\n        </span>\n        <span v-else>\n          <Textarea v-model=\"about\" :autoResize=\"true\" rows=\"5\" :style=\"{\n            width: '100%'\n          }\"/>\n        </span>\n\n        <br><br>\n        <Button label=\"Edit profile\" @click=\"editStatus = true\" v-if=\"!editStatus\"/>\n        <Button label=\"Save changes\" @click=\"saveChanges\" v-else/>\n      </template>\n      <template #title>\n        <div class=\"info\">\n          <Avatar class=\"mr-2\" size=\"large\" :style=\"{\n          background: 'url(\\'https://images.unsplash.com/photo-1675475794189-cf76fe3f58cf?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80\\') center no-repeat',\n          color: '#ffffff',\n          height: '140px',\n          width: '140px',\n          backgroundSize: '200px',\n          border: '3px solid #ffffff',\n          marginLeft: 'auto',\n          marginRight: 'auto',\n          display: 'block',\n          marginBottom: '10px'\n      }\" shape=\"circle\" />\n          Monkey John\n        </div>\n      </template>\n    </Card>\n\n    <div class=\"content\">\n      <div v-for=\"item in posts\" :key=\"item\">\n        <Post :item=\"item\" :is-owner=\"true\" />\n        <br>\n      </div>\n    </div>\n\n  </div>\n</template>\n\n<script>\nimport Card from 'primevue/card'\nimport Avatar from 'primevue/avatar'\nimport Button from \"primevue/button\"\nimport InputText from 'primevue/inputtext'\nimport Textarea from 'primevue/textarea'\nimport Post from \"@/components/Post.vue\"\n\nexport default {\n  name: \"profile-view\",\n  data() {\n    return {\n      posts: this.$store.state.posts,\n      editStatus: false,\n      email: 'monkey-john@gmail.com',\n      postsCount: 32,\n      about: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. A aut eaque, est modi natus nesciunt sapiente sed similique soluta suscipit? Accusamus ea eaque eligendi eum expedita minus nihil recusandae temporibus!'\n    }\n  },\n  methods: {\n    saveChanges() {\n      this.editStatus = false\n      this.$toast.add({severity:'success', summary: 'Successfully updated', detail:'Your profile has been updated', life: 6000})\n    }\n  },\n  components: {\n    Card,\n    Avatar,\n    Button,\n    InputText,\n    Textarea,\n    Post\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n\n  .wrapper {\n    padding-top: 70px;\n    padding-bottom: 20px;\n    background: var(--primary-color);\n    min-height: 100vh;\n  }\n\n  .profile-card {\n    display: block;\n    max-width: 600px;\n    min-height: 460px;\n    margin: 50px auto 70px;\n    padding-left: 50px;\n    padding-right: 50px;\n  }\n\n  .info {\n    text-align: center;\n  }\n\n  .content {\n    max-width: 600px;\n    display: block;\n    margin: 0 auto 0;\n  }\n\n  ::v-deep(.customized-timeline) {\n    .p-timeline-event:nth-child(even) {\n      flex-direction: row !important;\n\n      .p-timeline-event-content {\n        text-align: left !important;\n      }\n    }\n\n    .p-timeline-event-opposite {\n      flex: 0;\n    }\n\n    .p-card {\n      margin-top: 1rem;\n    }\n  }\n\n  .p-chip.custom-chip {\n    background: var(--primary-color);\n    color: var(--primary-color-text);\n  }\n\n  .custom-marker {\n    display: flex;\n    width: 2rem;\n    height: 2rem;\n    align-items: center;\n    justify-content: center;\n    color: #ffffff;\n    border-radius: 50%;\n    z-index: 1;\n  }\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}